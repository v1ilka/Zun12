<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zun">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zun">
        <activity
            android:name=".ThemesShowActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".hardcoded.FavoriteShowActivity"
            android:exported="true" />
        <activity
            android:name=".hardcoded.ThemeShowActivity"
            android:exported="true" />
        <activity
            android:name=".hardcoded.ThemesListShowActivity"
            android:exported="true" />
        <activity
            android:name=".hardcoded.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".hardcoded.AdminActivity"
            android:exported="true" />
        <activity
            android:name=".hardcoded.ThirdFemaleActivity"
            android:exported="true" />
        <activity
            android:name=".hardcoded.ChoiceActivity"
            android:exported="true" />
    </application>

</manifest>